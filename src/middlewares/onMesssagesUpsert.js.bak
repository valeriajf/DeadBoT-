// ğŸ”‡ SISTEMA MUTEALL - FunÃ§Ã£o para verificar se usuÃ¡rio Ã© admin
async function isUserAdmin(socket, groupId, userJid) {
    try {
        const groupMetadata = await socket.groupMetadata(groupId);
        const groupAdmins = groupMetadata.participants.filter(p => p.admin).map(p => p.id);
        return groupAdmins.includes(userJid);
    } catch (error) {
        console.error("âŒ Erro ao verificar admin:", error.message);
        return false;
    }
}

// ğŸ”‡ SISTEMA MUTEALL - FunÃ§Ã£o para deletar mensagem nÃ£o permitida no muteall
async function deleteForbiddenMessage(socket, webMessage, reason = "muteall ativo") {
    try {
        const { id, remoteJid, participant } = webMessage.key;
        await socket.sendMessage(remoteJid, { 
            delete: { 
                remoteJid, 
                fromMe: false, 
                id, 
                participant 
            } 
        });
        
        if (DEVELOPER_MODE) {
            console.log(`ğŸ”‡ [MUTEALL] Mensagem deletada: ${reason}`);
        }
    } catch (error) {
        console.error("âŒ [MUTEALL] Erro ao deletar mensagem:", error.message);
    }
}

